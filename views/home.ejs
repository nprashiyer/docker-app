<%- include('partials/header') %>
        <!-- <div class="container"> -->
        <!-- </div> -->
        <div class="row">
          <div class="column">
            <button class="button1 azure-btn"  data-toggle="modal" data-target="#myModal2" style="background-image: url('media/azure-card.png');background-repeat:no-repeat;background-size:cover;cursor:pointer;"></button>
          </div>
          <div class="column">
            <button class="button1 aws-btn" data-toggle="modal" data-target="#myModal2" style="background-image: url('media/aws-card.png');background-repeat:no-repeat;background-size:cover;cursor:pointer;"></button>
          </div>
          <div class="column">
            <button class="button1 gcp-btn" data-toggle="modal" data-target="#myModal2" style="background-image: url('media/gcp-card.png');background-repeat:no-repeat;background-size:cover;cursor:pointer;"></button>
          </div>
        </div>
</head>
        <!-- Modal -->
        <form action="/" method="post">
          <div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-keyboard="false" data-backdrop="static">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header" style="background-color: #007bff">
                  <h5 class="modal-title" style="color:white" id="myModalLabel">Order VM</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                  </div>
                <div class="modal-body">
                  <fieldset>
              <b>Provider:</b>
              <input class="platform" type="text" name="platform" readonly style="background-color: #C0C0C0">
              <br><br>
              <b>VM Name:</b>
              <input type="text" name="vmname" placeholder="Enter VM name here">
              <br><br>
              <b>Location:</b>
              <select name="vmlocation">
                  <option value="india">India</option>
                  <option value="us">US</option>
                  <option value="europe">Europe</option>
                </select>
                <br><br>
                <b>Operating System:</b>
                <select name="vmos">
                    <option value="win2k19">Windows 2k19</option>
                    <option value="win2k16">Windows 2k16</option>
                    <option value="ubuntu">Ubuntu</option>
                  </select>
                <br><br>
                <b>Use Case:</b>
                <input type="radio" name="usage" value="gen" checked> Generic
                <input type="radio" name="usage" value="mem"> Memory-Intensive
                <input type="radio" name="usage" value="com"> Compute-Intensive
                <br><br>
                <b>Size:</b>
                <select name="vmsize">
                    <option value="-s">Small</option>
                    <option value="-m">Medium</option>
                    <option value="-l">Large</option>
                  </select>
                <br><br>
                  <b>Disk Information:(Optional)</b>
                    <button type="button" class="button-rnd add_field_button"> + </button>
                    <br>
                    <div class="input_fields_wrap">
                    </div>
                </fieldset>
                </div>
                <div class="modal-footer">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </div>
            </div>
          </div>
          <script src="scripts/index1.js" charset="utf-8"></script>
        </form>
        <script src="scripts/platform.js"></script>

  <%- include('partials/footer') %>
